<div class="home-hero-section">
<div class=" gradient color-{{ section.settings.color_scheme }}">
  <div class="image-container--wrapper">
<div class="image-container">
  {% if section.settings.image != blank %}
    <img src="{{ section.settings.image | img_url: 'master' }}" alt="Framed Image">
 {% endif %}
</div>
 <div class="hero-banner--text-wrapper">
  <p class="hero-banner--block {{ section.settings.custom_class }}">
    {% for block in section.blocks %}
      {% if  block.settings.heading != blank %}
    <span>{{ block.settings.heading }}</span>
    {% endif %}
    {% endfor %}
   
  </p>
</div>
    {% if section.settings.enable_indicatore  %}
     <div class="scroll--down-indicator content">
       <div class="arrow-banner-position">
          <img src="https://cdn.shopify.com/s/files/1/0655/4556/8425/files/arrow-down.png?v=1751003702">
       </div>
</div>
  {% endif %}
  </div>
</div>

</div>
{% schema %}
{
  "name": "Hero banner",
  "tag": "section",
  "class": "centered-image-section scroll-down",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_indicatore",
      "label": "Enable Indicatore",
      "default": false
    },
    {
      "type": "text",
      "id": "custom_class",
      "label": "Custom Class"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "image"
    },
     {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    }
  ],
   "blocks": [
    {
     "type": "heading",
      "name": "t:sections.image-with-text.blocks.heading.name",
      "limit": 12,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "label": "Heading"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero banner"
    }
  ]
}
{% endschema %}